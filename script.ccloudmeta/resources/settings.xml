<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<settings>

    <!-- General -->
    <category label="30000">

        <!-- Auto update players -->
        <setting id="players_update_url" label="30010" type="text" default='https://github.com/OpenELEQ/unofficial-meta-players/archive/master.zip' />
        <setting subsetting="true" option="close" enable="!eq(-2,)" label="30012" type="action" action="RunPlugin(plugin://script.ccloudmeta/update_players)"/>
        
        <!-- Live TV -->
        <setting label="30500" type="lsep"/>

            <!-- Players -->
            <setting label="30501" option="close" type="action" action="RunPlugin(plugin://script.ccloudmeta/settings/players/live)"/>
            <setting subsetting="true" visible="false" enable="false" type="text" id="live_enabled_players" default="[&quot;provider.midraal.ccloudtv.direct.play&quot;]"/>

            <!-- Default players -->
            <setting label="30510" option="close" type="action" action="RunPlugin(plugin://script.ccloudmeta/settings/default_player/live)"/>
            <setting subsetting="true" visible="!eq(0,)" enable="false" type="text" id="live_default_player" default="[&quot;provider.midraal.ccloudtv.direct.play&quot;]" />
        
    </category>
    
    <!-- Advanced -->
    <category label="30400">
        
        <!-- Simple selector -->
        <setting label="30402" type="bool" id="use_simple_selector" default="false"/>
        

        <!-- Attempt to hide dialogs -->
        <setting label="30410" type="bool" id="auto_hide_dialogs" default="false" enable="eq(-1,false)"/>
        
            <setting subsetting="true" label="30411" type="bool" id="auto_hide_dialogs_progress" default="true" enable="eq(-1,true)"/>

            <setting subsetting="true" label="30412" type="bool" id="auto_hide_dialogs_info" default="true" enable="eq(-2,true)"/>
            
            <setting subsetting="true" label="30413" type="bool" id="auto_hide_dialogs_keyboard" default="true" enable="eq(-3,true)"/>
            
            
        <!-- Simple selector -->
        <setting label="30404" type="slider" id="pool_size" default="5" range="1,15" option="int" />
        
        <!-- Clear cache -->
        <setting label="30401" type="action" action="RunPlugin(plugin://script.ccloudmeta/clear_cache)"/>        
        
        
    </category>
    
</settings>
